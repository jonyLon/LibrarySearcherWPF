<Window x:Class="LibrarySearcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySearcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="AuthorsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10" SelectionChanged="AuthorsComboBox_SelectionChanged"/>
        <TextBox Name="SearchTextBox" HorizontalAlignment="center" VerticalAlignment="Top" Width="200" Margin="0,10,0,0" Height="20"/>
        <Button Name="SearchButton" Content="Search" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,10,40,0" Click="SearchButton_Click"/>
        <ListBox Name="BooksListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="760" Height="350" Margin="10,50,0,0"/>
    </Grid>
</Window>
